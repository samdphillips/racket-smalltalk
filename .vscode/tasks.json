{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "raco setup -Dmv --pkgs smalltalk-reader",
            "problemMatcher": {
                "owner": "racket",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^([^ :]+):(\\d+):(\\d+):(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "raco test -p smalltalk-reader"
        }
    ]
}